<!DOCTYPE html>
<html>
    <head>
        <title>Dashboard</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.css" integrity="sha512-0nkKORjFgcyxv3HbE4rzFUlENUMNqic/EzDIeYCgsKa/nwqr2B91Vu/tNAu4Q0cBuG4Xe/D1f/freEci/7GDRA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="../Dashboard/dashboard.styling.css">
    </head>
<body>
        <div id="welcome-container" class="d-flex justify-content-between align-items-center">
            <header id="welcome">
                <i id="house-icon" class="bi bi-house-door"></i>
                Welcome, <span id="user-username"><%= user.username %></span>!
            </header>
            <i id="logout-icon" class="bi bi-box-arrow-left"></i>
        </div>
        <h2 id="info-header">
            User Functions
        </h2>
        <div id="user-info">
                <div id="update-details" class="card">
                    <button id="delete-user-button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delete-user-modal">
                        Delete User
                    </button>
                    <div class="card-header">
                        Update Your Details
                    </div>
                    <div id="card-body" class="card-body d-flex flex-column justify-content-center align-items-center">
                        <form id="user-details-form">
                            <div id="form-field">
                                <label for="username">Username:</label>
                                <input type="text" class="form-control text-dark" id="username" name="username" placeholder="<%= user.username %>">
                                <div id="invalid-feedback" class="text-danger">

                                </div>
                            </div>
                            <div id="form-field">
                                <label for="email">Email:</label>
                                <input type="email" class="form-control text-dark" id="email" name="email" placeholder="<%= user.email %>">
                                <div id="invalid-feedback" class="text-danger">

                                </div>
                            </div>
                            <div id="form-field" class="form-field-password">
                                <label for="password">Password:</label>
                                <input type="password" class="form-control text-dark" id="password">
                                <i id="eye-icon" class="bi bi-eye-fill"></i>
                                <div id="invalid-feedback" class="text-danger">
                                </div>
                            </div>
                            <div id="user-details-button-container">
                                <button id="user-details-button" class="btn btn-primary" type="button">Update Details</button>
                                <div id="valid-feedback" class="text-success">
                                
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            <div id="user-orders" class="card">
                <div class="card-header">
                    Your Orders
                </div>
                <div class="card-body">
                    <% if (orders_of_user) {
                        orders_of_user.forEach(order => { %>
                        <div id="user-order">
                            <p>Orderer's Name: <%= order.name %></p>
                            <p>Email: <%= order.email %></p>
                            <p>Phone Number: <%= order.phone_number %></p>
                            <p>Date Ordered: <%= order.date %></p>
                            <div id="address-container">
                                Address:
                                <p id="address-paragraph">
                                    City: <%= order.address.city %> 
                                </p>
                                <p id="address-paragraph">
                                    Street: <%= order.address.street %>
                                </p>
                                <p id="address-paragraph">
                                    Apartment: <%= order.address.apartment %>
                                </p>
                                <p id="address-paragraph">
                                    Floor: <%= order.address.floor %>
                                </p>
                            </div>
                            <div id="user-order-products">
                              <h4>Products Ordered:</h4>
                              <ul id = "user-order-product-list">
                                <% let total_order_price = 0; %>
                                <% order.products_info.forEach(product => { %>
                                    <% total_order_price += product.total_price %>
                                    <li id = "user-order-product-item" class="d-flex align-items-center">
                                        <div>
                                            <img id="product-image" src = <%= product.image %>>
                                        </div>
                                        <div>
                                            <div>
                                                <%= product.product_name %> - <%= product.amount %> Units
                                            </div>
                                            <div>
                                                <% function capitalizeWords(str) {
                                                    return str.replace(/\w+/g, function(txt){
                                                        return txt.charAt(0).toUpperCase() + txt.substr(1);
                                                    });
                                                } %>
                                                <% let additions_string = "" %>
                                                <% let flag = false %>
                                                <% Object.entries(product.additions).forEach(([addition, value]) => {
                                                    if (value) { 
                                                        if(!flag) {
                                                            additions_string += "Additions:"
                                                            flag = true 
                                                        } 
                                                        additions_string += " " + capitalizeWords(addition.replace('_', ' ')) + ",";
                                                    } 
                                                }); %>
                                                <%= additions_string.slice(0, -1) %>
                                            </div>
                                            <div>
                                                Total Product Price:
                                                $<%= product.total_price %>  
                                            </div>
                                        </div>
                                    </li>
                                <% }); %>
                                <div>
                                    Total Order Price:
                                    $<%= total_order_price %>   
                                </div>
                              </ul>
                            </div>
                        </div>
                        <% });
                      } else { %>
                        <p>No orders available.</p>
                      <% } %>
                </div>
            </div>
        </div>
        <% if (user.is_admin) { %>
            <h2 id="info-header">
                Admin Functions
            </h2>
            <div id="admin-info">
                <button id="button" class="btn btn-primary product-button" type="button">
                    <i class="bi bi-arrow-right-square-fill"></i>
                    Product Functions    
                </button>
                
                <button id="button" class="btn btn-primary category-button" type="button">
                    <i class="bi bi-arrow-right-square-fill"></i>
                    Category Functions    
                </button>

                <button id="button" class="btn btn-primary order-button" type="button">
                    <i class="bi bi-arrow-right-square-fill"></i>
                    Order Functions    
                </button>
            </div>
        <% } %>

        <div class="modal fade" id="delete-user-modal" tabindex="-1" aria-labelledby="Delete User Modal Label" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Delete User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                Are you sure you want to delete this user - <%= user.username %>?
              </div>
              <div class="modal-footer">
                <button id="cancel-delete-user-button" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button id="confirm-delete-user-button" type="button" class="btn btn-danger">Delete</button>
              </div>
            </div>
          </div>
        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js" integrity="sha512-rMGGF4wg1R73ehtnxXBt5mbUfN9JUJwbk21KMlnLZDJh7BkPmeovBuddZCENJddHYYMkCh9hPFnPmS9sspki8g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script type="module" src="./header.js"></script>
    <script type="module" src="./User/updateUser.js"></script>
    <script type="module" src="./Category/createCategory.js"></script>
    <script type="module" src="./Category/deleteCategory.js"></script>
    <script type="module" src="./Category/updateCategory.js"></script>
    <script>
        $(document).ready(() => {
            $("#confirm-delete-user-button").on("click", async () => {
                try {
                    const user = await $.ajax({
                        url: '/dashboard/user',
                        type: 'GET',
                    });
                    if (user) {
                        await $.ajax({
                            url: `/users/${user.email}`, 
                            method: 'DELETE',
                        });   
                        window.location.href = '/';
                    }
                } 
                catch (error) {
                    console.log("Error deleting user", error);
                }
            }); 
            
            $("cancel-delete-user-button").on("click", () => {
              $("#delete-user-modal").modal("hide");
            })
        });
    </script>
</body>
</html>